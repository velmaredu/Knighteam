<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accionesPopUpAlpha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/madera_pixel"

    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/PergaminoAcciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/pergamino"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif"
            android:gravity="top|start"
            android:text="ACCIONES DISPONIBLES"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="46dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:rowCount="2"
            android:columnCount="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonMejorarVida"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/rock_button"
                android:text="Mejorar Vida"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonMejorarAtaque"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/rock_button"
                android:layout_gravity="center"
                android:text="Mejorar Ataque"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botonMejorarVelocidad"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/rock_button"
                android:layout_gravity="center"
                android:text="Mejorar Velocidad"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:justificationMode="inter_word"
                android:text="Mejorar Salud:           30 Estamina \nMejorar Ataque:        25 Estamina \nMejorar Velocidad:   25 Estamina"

                />




        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonAtras"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rock_button"
            android:text="@string/botonAtras"

            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>